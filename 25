25.	Implement linear queue using an array and use the same to sort a list of N integers.
    
    #include <iostream>
    #include <climits> 
    
    using namespace std;
    
    #define MAX 100 
    
    class LinearQueue {
    private:
        int queue[MAX];
        int front, rear;
        int maxSize;
    
    public:
        LinearQueue() {
            front = -1;
            rear = -1;
            maxSize = MAX;
        }
    
        bool isFull() {
            return (rear == maxSize - 1);
        }
    
        bool isEmpty() {
            return (front == -1 || front > rear);
        }
    
        void insert(int value) {
            if (isFull()) {
                cout << "Queue Overflow!" << endl;
                return;
            }
            if (front == -1) {
                front = 0;
            }
            rear++;
            queue[rear] = value;
        }
    
        int remove() {
            if (isEmpty()) {
                cout << "Queue Underflow!" << endl;
                return -1;
            }
            int value = queue[front];
            front++;
            if (front > rear) {
                front = -1;
                rear = -1;
            }
            return value;
        }
    };
    
    void queueSort(int arr[], int n, LinearQueue &q) {
        if (n > MAX) {
            cout << "Array size exceeds queue capacity." << endl;
            return;
        }
    
        for (int i = 0; i < n; i++) {
            int minVal = INT_MAX;
            int minIndex = -1;
    
            for (int j = 0; j < n; j++) {
                if (arr[j] < minVal) {
                    minVal = arr[j];
                    minIndex = j;
                }
            }
    
            q.insert(minVal);
            arr[minIndex] = INT_MAX;
        }
    
        for (int i = 0; i < n; i++) {
            arr[i] = q.remove();
        }
    }
    
    void print_array(int arr[], int size) {
        for (int i = 0; i < size; i++) {
            cout << arr[i] << " ";
        }
        cout << endl;
    }
    
    int main() {
        int n;
        cout << "Enter the number of integers (N): ";
        cin >> n;
    
        if (n > MAX) {
             cout << "Error: N cannot exceed " << MAX << endl;
             return 1;
        }
    
        int* numbers = new int[n];
        cout << "Enter " << n << " integers:" << endl;
        for (int i = 0; i < n; i++) {
            cout << "Enter element " << i + 1 << ": ";
            cin >> numbers[i];
        }
    
        cout << "\nOriginal array: ";
        print_array(numbers, n);
    
        LinearQueue sortQueue;
    
        queueSort(numbers, n, sortQueue);
    
        cout << "Sorted array: ";
        print_array(numbers, n);
    
        delete[] numbers;
        return 0;
    }
