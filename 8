8.	Design a two-way stack using an array of Max size 50. Design conditions  for stack overflow and underflow. Write main function to demonstrate PUSH and POP from both ends.

  #include <iostream>
  using namespace std;
  #define MAX 50
  
  class TwoWayStack {
  private:
      int arr[MAX];
      int top1;
      int top2;
  
  public:
      TwoWayStack() {
          top1 = -1;
          top2 = MAX;
      }
  
      bool isFull() {
          return (top1 + 1 == top2);
      }
  
      bool isEmpty1() {
          return (top1 == -1);
      }
  
      bool isEmpty2() {
          return (top2 == MAX);
      }
  
      void push1(int x) {
          if (isFull()) {
              cout << "Stack Overflow! Cannot push to Stack 1." << endl;
              return;
          }
          arr[++top1] = x;
          cout << x << " pushed to Stack 1." << endl;
      }
  
      void push2(int x) {
          if (isFull()) {
              cout << "Stack Overflow! Cannot push to Stack 2." << endl;
              return;
          }
          arr[--top2] = x;
          cout << x << " pushed to Stack 2." << endl;
      }
  
      int pop1() {
          if (isEmpty1()) {
              cout << "Stack 1 Underflow!" << endl;
              return -1; 
          }
          int val = arr[top1--];
          cout << val << " popped from Stack 1." << endl;
          return val;
      }
  
      int pop2() {
          if (isEmpty2()) {
              cout << "Stack 2 Underflow!" << endl;
              return -1;
          }
          int val = arr[top2++];
          cout << val << " popped from Stack 2." << endl;
          return val;
      }
  };
  
  int main() {
      TwoWayStack tws;
      int choice, val;
  
      do {
          cout << "\n--- Two-Way Stack Menu ---" << endl;
          cout << "1. Push to Stack 1 (Left)" << endl;
          cout << "2. Pop from Stack 1 (Left)" << endl;
          cout << "3. Push to Stack 2 (Right)" << endl;
          cout << "4. Pop from Stack 2 (Right)" << endl;
          cout << "5. Exit" << endl;
          cout << "Enter your choice: ";
          cin >> choice;
  
          switch (choice) {
              case 1:
                  cout << "Enter value to push to Stack 1: ";
                  cin >> val;
                  tws.push1(val);
                  break;
              case 2:
                  tws.pop1();
                  break;
              case 3:
                  cout << "Enter value to push to Stack 2: ";
                  cin >> val;
                  tws.push2(val);
                  break;
              case 4:
                  tws.pop2();
                  break;
              case 5:
                  cout << "Exiting program." << endl;
                  break;
              default:
                  cout << "Invalid choice! Please try again." << endl;
          }
      } while (choice != 5);
  
      return 0;
  }
