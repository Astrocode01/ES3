13.	Store N integers in an array and apply Bubble sort algorithm to sort it and perform binary search to search a given key.

    #include <iostream>
    #include <algorithm>
    
    using namespace std;
    
    void bubble_sort(int arr[], int n) {
        bool swapped;
        for (int i = 0; i < n - 1; i++) {
            swapped = false;
            for (int j = 0; j < n - i - 1; j++) {
                if (arr[j] > arr[j + 1]) {
                    swap(arr[j], arr[j + 1]);
                    swapped = true;
                }
            }
            if (swapped == false)
                break;
        }
    }
    
    int binary_search(int arr[], int left, int right, int key) {
        while (left <= right) {
            int mid = left + (right - left) / 2;
    
            if (arr[mid] == key) {
                return mid;
            }
    
            if (arr[mid] < key) {
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }
        return -1;
    }
    
    void print_array(int arr[], int size) {
        for (int i = 0; i < size; i++) {
            cout << arr[i] << " ";
        }
        cout << endl;
    }
    
    int main() {
        int n;
    
        cout << "Enter the number of integers (N): ";
        cin >> n;
    
        int* numbers = new int[n];
    
        cout << "Enter " << n << " integers:" << endl;
        for (int i = 0; i < n; i++) {
            cout << "Enter element " << i + 1 << ": ";
            cin >> numbers[i];
        }
    
        cout << "\nOriginal array: ";
        print_array(numbers, n);
    
        bubble_sort(numbers, n);
    
        cout << "Sorted array: ";
        print_array(numbers, n);
    
        int key;
        cout << "\nEnter the key to search: ";
        cin >> key;
    
        int result = binary_search(numbers, 0, n - 1, key);
    
        if (result != -1) {
            cout << "Key " << key << " found at index " << result << "." << endl;
        } else {
            cout << "Key " << key << " not found in the array." << endl;
        }
    
        delete[] numbers;
    
        return 0;
    }
