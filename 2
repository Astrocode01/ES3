2.	Sort the characters of a studentâ€™s name in reverse alphabetical order using bubble sort and display using arrays.

    #include <iostream>
    #include <string>
    #include <algorithm> // For swap
    
    using namespace std;
    
    void bubble_sort_desc(string &str) {
        int n = str.length();
        bool swapped;
        for (int i = 0; i < n - 1; i++) {
            swapped = false;
            for (int j = 0; j < n - i - 1; j++) {
                // For reverse order, swap if the current char is LESS than the next char
                if (str[j] < str[j + 1]) {
                    swap(str[j], str[j + 1]);
                    swapped = true;
                }
            }
            // If no two elements were swapped by inner loop, then break
            if (swapped == false)
                break;
        }
    }
    
    int main() {
        string name;
    
        cout << "Enter the student's name: ";
        getline(cin, name);
    
        cout << "Original name: " << name << endl;
    
        bubble_sort_desc(name);
    
        cout << "Name in reverse alphabetical order: " << name << endl;
    
        return 0;
    }
