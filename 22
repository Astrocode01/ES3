22.	Enlist all the prime numbers from 1 to 500 in a singly link list. Display all numbers by displaying the list( A prime number is one which is divisible 1 and itself only).

    #include <iostream>
    #include <cmath>
    
    using namespace std;
    
    class Node {
    public:
        int data;
        Node* next;
    
        Node(int d) {
            data = d;
            next = nullptr;
        }
    };
    
    class SinglyLinkedList {
    private:
        Node* head;
        Node* tail;
    
    public:
        SinglyLinkedList() {
            head = nullptr;
            tail = nullptr;
        }
    
        ~SinglyLinkedList() {
            Node* current = head;
            Node* nextNode = nullptr;
            while (current != nullptr) {
                nextNode = current->next;
                delete current;
                current = nextNode;
            }
            head = nullptr;
            tail = nullptr;
        }
    
        void append(int data) {
            Node* newNode = new Node(data);
            if (head == nullptr) {
                head = newNode;
                tail = newNode;
            } else {
                tail->next = newNode;
                tail = newNode;
            }
        }
    
        void display() {
            if (head == nullptr) {
                cout << "List is empty." << endl;
                return;
            }
            Node* temp = head;
            while (temp != nullptr) {
                cout << temp->data << " ";
                temp = temp->next;
            }
            cout << endl;
        }
    };
    
    bool isPrime(int n) {
        if (n <= 1) {
            return false;
        }
        if (n == 2) {
            return true;
        }
        if (n % 2 == 0) {
            return false;
        }
        for (int i = 3; i <= sqrt(n); i += 2) {
            if (n % i == 0) {
                return false;
            }
        }
        return true;
    }
    
    int main() {
        SinglyLinkedList primeList;
    
        for (int i = 1; i <= 500; i++) {
            if (isPrime(i)) {
                primeList.append(i);
            }
        }
    
        cout << "Prime numbers from 1 to 500:" << endl;
        primeList.display();
    
        return 0;
    }
