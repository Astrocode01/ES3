1.	Store name of person in an array and sort the characters in alphabetic order using insertion sort algorithm.

    #include <iostream>
    #include <string>
    
    using namespace std;
    
    void insertion_sort(string &str) {
        int n = str.length();
        for (int i = 1; i < n; i++) {
            char key = str[i];
            int j = i - 1;
    
            while (j >= 0 && str[j] > key) {
                str[j + 1] = str[j];
                j = j - 1;
            }
            str[j + 1] = key;
        }
    }
    
    int main() {
        string name;
    
        cout << "Enter the name of the person: ";
        getline(cin, name);
    
        cout << "Original name: " << name << endl;
    
        insertion_sort(name);
    
        cout << "Name after sorting characters: " << name << endl;
    
        return 0;
    }
