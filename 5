5.	create a singly linked list to store an 8-bit binary number. Define function to convert this 8-bit binary number to decimal.

    #include <iostream>
    #include <string>
    #include <cmath>
    
    using namespace std;
    
    class Node {
    public:
        int data;
        Node* next;
    
        Node(int bit) {
            data = bit;
            next = nullptr;
        }
    };
    
    class SinglyLinkedList {
    private:
        Node* head;
    
    public:
        SinglyLinkedList() {
            head = nullptr;
        }
    
        ~SinglyLinkedList() {
            Node* current = head;
            Node* nextNode = nullptr;
            while (current != nullptr) {
                nextNode = current->next;
                delete current;
                current = nextNode;
            }
            head = nullptr;
        }
    
        void append(int bit) {
            Node* newNode = new Node(bit);
            if (head == nullptr) {
                head = newNode;
                return;
            }
            Node* temp = head;
            while (temp->next != nullptr) {
                temp = temp->next;
            }
            temp->next = newNode;
        }
    
        void display() {
            if (head == nullptr) {
                cout << "List is empty." << endl;
                return;
            }
            Node* temp = head;
            while (temp != nullptr) {
                cout << temp->data;
                temp = temp->next;
            }
            cout << endl;
        }
    
        int binaryToDecimal() {
            int decimalValue = 0;
            int power = 7;
            Node* temp = head;
    
            while (temp != nullptr && power >= 0) {
                if (temp->data == 1) {
                    decimalValue += pow(2, power);
                }
                power--;
                temp = temp->next;
            }
            return decimalValue;
        }
    };
    
    int main() {
        SinglyLinkedList binaryList;
        string binaryString;
    
        cout << "Enter an 8-bit binary number: ";
        cin >> binaryString;
    
        if (binaryString.length() != 8) {
            cout << "Error: Please enter exactly 8 bits." << endl;
            return 1;
        }
    
        for (char c : binaryString) {
            if (c == '0') {
                binaryList.append(0);
            } else if (c == '1') {
                binaryList.append(1);
            } else {
                cout << "Error: Invalid character '" << c << "' in binary number." << endl;
                return 1;
            }
        }
    
        cout << "Binary number entered: ";
        binaryList.display();
    
        int decimalEquivalent = binaryList.binaryToDecimal();
        cout << "Decimal equivalent: " << decimalEquivalent << endl;
    
        return 0;
    }
