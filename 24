24.	Use an array based stack for sorting a set numbers using Bubble sort.

    #include <iostream>
    #include <algorithm>
    
    using namespace std;
    
    void bubble_sort(int arr[], int n) {
        bool swapped;
        for (int i = 0; i < n - 1; i++) {
            swapped = false;
            for (int j = 0; j < n - i - 1; j++) {
                if (arr[j] > arr[j + 1]) {
                    swap(arr[j], arr[j + 1]);
                    swapped = true;
                }
            }
            if (swapped == false)
                break;
        }
    }
    
    void print_array(int arr[], int size) {
        for (int i = 0; i < size; i++) {
            cout << arr[i] << " ";
        }
        cout << endl;
    }
    
    int main() {
        int n;
    
        cout << "Enter the number of integers: ";
        cin >> n;
    
        int* numbers = new int[n];
    
        cout << "Enter " << n << " integers:" << endl;
        for (int i = 0; i < n; i++) {
            cout << "Enter element " << i + 1 << ": ";
            cin >> numbers[i];
        }
    
        cout << "\nOriginal array: ";
        print_array(numbers, n);
    
        bubble_sort(numbers, n);
    
        cout << "Sorted array (using Bubble Sort): ";
        print_array(numbers, n);
    
        delete[] numbers;
    
        return 0;
    }
