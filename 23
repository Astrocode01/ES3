23.	Read an arithmetic postfix expression and check whether itâ€™s a valid postfix expression or not using an array based stack.

    #include <iostream>
    #include <string>
    #include <cctype>
    
    using namespace std;
    
    #define MAX 50
    
    class Stack {
    private:
        int arr[MAX];
        int top;
    
    public:
        Stack() {
            top = -1;
        }
    
        bool isFull() {
            return top == MAX - 1;
        }
    
        bool isEmpty() {
            return top == -1;
        }
    
        void push(int x) {
            if (isFull()) {
                cout << "Stack Overflow" << endl;
                return;
            }
            arr[++top] = x;
        }
    
        int pop() {
            if (isEmpty()) {
                return -1; 
            }
            return arr[top--];
        }
    
        bool pop_safe() {
            if (isEmpty()) {
                return false;
            }
            top--;
            return true;
        }
    };
    
    bool isValidPostfix(string expression) {
        Stack s;
    
        for (char ch : expression) {
            if (isspace(ch)) {
                continue;
            }
    
            if (isalnum(ch)) {
                if (s.isFull()) {
                    cout << "Expression too long, stack overflow." << endl;
                    return false;
                }
                s.push(1); 
            }
            else if (ch == '+' || ch == '-' || ch == '*' || ch == '/' || ch == '%') {
                
                if (!s.pop_safe()) {
                    return false; 
                }
                
                if (!s.pop_safe()) {
                    return false; 
                }
    
                s.push(1);
            }
            else {
                return false; 
            }
        }
    
        if (s.isEmpty()) {
            return false; 
        }
    
        s.pop();
        
        return s.isEmpty();
    }
    
    int main() {
        string postfixExpression;
        
        cout << "Enter an arithmetic postfix expression: ";
        getline(cin, postfixExpression);
    
        if (isValidPostfix(postfixExpression)) {
            cout << "The expression \"" << postfixExpression << "\" is a valid postfix expression." << endl;
        } else {
            cout << "The expression \"" << postfixExpression << "\" is NOT a valid postfix expression." << endl;
        }
    
        return 0;
    }
