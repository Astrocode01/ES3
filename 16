16.	Create a Singly linked list to store any integer digit by digit. Store following integers 123456789 and 987654321 and these two integers node by node and store the result in simple long integer.

    #include <iostream>
    #include <string>
    
    using namespace std;
    
    class Node {
    public:
        int data;
        Node* next;
    
        Node(int d) {
            data = d;
            next = nullptr;
        }
    };
    
    class SinglyLinkedList {
    private:
        Node* head;
    
    public:
        SinglyLinkedList() {
            head = nullptr;
        }
    
        ~SinglyLinkedList() {
            Node* current = head;
            Node* nextNode = nullptr;
            while (current != nullptr) {
                nextNode = current->next;
                delete current;
                current = nextNode;
            }
            head = nullptr;
        }
    
        void append(int data) {
            Node* newNode = new Node(data);
            if (head == nullptr) {
                head = newNode;
                return;
            }
            Node* temp = head;
            while (temp->next != nullptr) {
                temp = temp->next;
            }
            temp->next = newNode;
        }
    
        void display() {
            if (head == nullptr) {
                cout << "List is empty." << endl;
                return;
            }
            Node* temp = head;
            while (temp != nullptr) {
                cout << temp->data;
                temp = temp->next;
            }
            cout << endl;
        }
    
        long convertToLong() {
            long num = 0;
            Node* temp = head;
            while (temp != nullptr) {
                num = (num * 10) + temp->data;
                temp = temp->next;
            }
            return num;
        }
    };
    
    int main() {
        SinglyLinkedList list1;
        SinglyLinkedList list2;
    
        string s1 = "123456789";
        string s2 = "987654321";
    
        for (char c : s1) {
            list1.append(c - '0');
        }
    
        for (char c : s2) {
            list2.append(c - '0');
        }
    
        cout << "Integer 1 in Linked List: ";
        list1.display();
    
        cout << "Integer 2 in Linked List: ";
        list2.display();
    
        long num1 = list1.convertToLong();
        long num2 = list2.convertToLong();
        long result = num1 + num2;
    
        cout << "\nConverting lists to long integers node by node..." << endl;
        cout << "Number 1: " << num1 << endl;
        cout << "Number 2: " << num2 << endl;
        cout << "\nResult of addition (stored in a long integer): " << result << endl;
    
        return 0;
    }
